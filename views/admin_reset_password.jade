extends layout

block head
  title Admin - Reset Password

block content
  .page-header
    h1 #[span.label.label-danger Admin] Reset Password

  form.form-horizontal(action='#{ROOT}admin/reset_password', method='post')
    fieldset
      // Textarea
      .form-group
        label.col-md-3.control-label(for='studentID') Student ID
        .col-md-9
          input.form-control.input-md.monospace#studentID(name='studentID', type='text', required)
      // Button
      .form-group
        label.col-md-4.control-label(for='reset')
        .col-md-4
          button#rest.btn.btn-primary Reset
