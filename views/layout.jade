doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/style.css', rel='stylesheet')
    block head
      title Welcome
  body
    nav.navbar.navbar-default.navbar-static-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Project name
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            li.active
              a(href='#') Home
            li
              a(href='#about') About
            li
              a(href='#contact') Contact
          if session.isLogin
            ul.nav.navbar-nav.navbar-right
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                  | #[span.glyphicon.glyphicon-user(aria-hidden="true")] #{session.user.username} 
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='/speech/new') New Speech
                  li.divider(role='separator')
                  li
                    a(href='/user/modify') Modify
                  li
                    a(href='/user/logout') Logout
          else
            form.navbar-form.navbar-right(action='/user/login', method='post')
              .form-group
                  input.form-control.input-sm.short-input(type='text', name='username', placeholder='Username')
              .form-group
                  input.form-control.input-sm.short-input(type='password', name='password', placeholder='Password')
              button.btn.btn-info.btn-sm(type='submit') Login
              a.btn.btn-success.btn-sm(href='/user/register') Register

    .container
      block content
    script(src='/js/jquery-2.1.4.min.js')
    script(src='/js/bootstrap.min.js')
    block script
