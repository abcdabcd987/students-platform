doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='/vendor/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/style.css', rel='stylesheet')
    block head
      title Welcome
  body
    nav.navbar.navbar-default.navbar-static-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') 学子讲坛
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='/speech/list') #[span.glyphicon.glyphicon-th-list] 演讲列表

            if session.isAdmin
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                  | #[span.glyphicon.glyphicon-cog] 后台管理 
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='/admin/bulk_register') 批量注册用户

          if session.isLogin
            ul.nav.navbar-nav.navbar-right
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                  | #[span.glyphicon.glyphicon-user(aria-hidden="true")] #{session.user.name} 
                  span.caret
                ul.dropdown-menu
                  if session.isAdmin
                    li
                      a(href='/speech/new') 添加演讲
                    li.divider(role='separator')
                  li
                    a(href='/user/modify') 修改个人信息
                  li
                    a(href='/user/logout') 登出
          else
            form.navbar-form.navbar-right(action='/user/login', method='post')
              .form-group
                  input.form-control.input-sm.short-input(type='text', name='studentID', placeholder='Student ID')
              .form-group
                  input.form-control.input-sm.short-input(type='password', name='password', placeholder='Password')
              button.btn.btn-info.btn-sm(type='submit') 登入
              //a.btn.btn-success.btn-sm(href='/user/register') Register

    .container
      block content
    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src='/vendor/bootstrap/dist/js/bootstrap.min.js')
    block script
